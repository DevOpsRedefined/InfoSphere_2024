{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,

  "settings": {
    "color": {
      "background": true,
      "custom": true,
      "text": true,
      "link": true,

      "customDuotone": true,
      "customGradient": true,
      "defaultDuotone": true,
      "defaultGradients": true,
      "defaultPalette": true,
      "button": true,

      "palette": [
        {
          "slug": "primary",
          "color": "#3E4095",
          "name": "Primary - infoSphere"
        },

        {
          "slug": "primary-dark",
          "color": "#2F3171",
          "name": "Primary dark - infoSphere"
        },

        {
          "slug": "secondary",
          "color": "#00A859",
          "name": "Secondary - infoSphere"
        },

        {
          "slug": "secondary-light",
          "color": "#00FF7F",
          "name": "Secondary light - infoSphere"
        }
      ],
      "gradients": [
        {
          "slug": "primary-to-secondary",
          "gradient": "linear-gradient(160deg, var(--wp--preset--color--primary), var(--wp--preset--color--secondary))",
          "name": "Primary to Secondary"
        }
      ],
      "duotone": [
        {
          "colors": ["#1d1f35", "#6cace4"],
          "slug": "dark-blue-and-light-blue",
          "name": "Dark blue and light blue"
        },
        {
          "colors": ["#1d1f35", "#c7c0af"],
          "slug": "dark-blue-and-beige",
          "name": "Dark blue and beige"
        }
      ]
    },

    "blocks": {
      "core/navigation": {
        "comment": "works on parent",
        "appearanceTools": true,
        "spacing": {
          "padding": true,
          "margin": true,
          "blockGap": true
        }
      },
      "core/navigation-link": {
        "border": {
          "color": true,
          "style": true,
          "width": true,
          "radius": true
        },
        "background": {},
        "custom": {
          "padding": "padding-here"
        },
        "comment": "works on parent",
        "appearanceTools": true,
        "spacing": {
          "padding": true,
          "margin": true
        }
      }
    },

    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
          "slug": "system-fonts",
          "name": "System Fonts"
        },

        {
          "fontFace": [
            {
              "fontFamily": "Helvetica neue",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": [
                "file:./assets/fonts/helvetica-neue-5/HelveticaNeueRoman.otf"
              ]
            },
            {
              "fontFamily": "Helvetica neue",
              "fontStretch": "normal",
              "fontStyle": "italic",
              "fontWeight": "400",
              "src": [
                "file:./assets/fonts/helvetica-neue-5/HelveticaNeueItalic.otf"
              ]
            },

            {
              "fontFamily": "Helvetica neue",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "500",
              "src": [
                "file:./assets/fonts/helvetica-neue-5/HelveticaNeueMedium.otf"
              ]
            },
            {
              "fontFamily": "Helvetica neue",
              "fontStretch": "normal",
              "fontStyle": "italic",
              "fontWeight": "500",
              "src": [
                "file:./assets/fonts/helvetica-neue-5/HelveticaNeueMediumItalic.otf"
              ]
            },

            {
              "fontFamily": "Helvetica neue",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": [
                "file:./assets/fonts/helvetica-neue-5/HelveticaNeueBold.otf"
              ]
            },
            {
              "fontFamily": "Helvetica neue",
              "fontStretch": "normal",
              "fontStyle": "italic",
              "fontWeight": "700",
              "src": [
                "file:./assets/fonts/helvetica-neue-5/HelveticaNeueBoldItalic.otf"
              ]
            }
          ],
          "fontFamily": "\"Helvetica neue\", sans-serif",
          "name": "Helvetica neue",
          "slug": "helvetica-neue"
        },

        {
          "fontFamily": "Geneva, Tahoma, Verdana, sans-serif",
          "slug": "geneva-verdana"
        },
        {
          "fontFamily": "Geneva, Tahoma, Verdana, sans-serif",
          "slug": "geneva-verdana"
        }
      ],
      "fontSizes": [
        {
          "slug": "extra-small",
          "size": "1rem",
          "name": "Extra small"
        },
        {
          "slug": "small",
          "size": "1.125rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1.25rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.5rem",
          "name": "Large"
        },
        {
          "slug": "extra-large",
          "size": "2.5rem",
          "name": "Extra large"
        }
      ],
      "lineHeight": true
    },

    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },

    "layout": {
      "contentSize": "840px",
      "wideSize": "1100px"
    }
  },

  "styles": {
    "spacing": {
      "margin": {
        "comments_left": "20px",
        "comments_right": "20px",
        "comments_top": "20px"
      }
    },
    "comment__color": {
      "background": "var(--wp--preset--color--primary)",
      "text": "var(--wp--preset--color--secondary-light)"
    },
    "elements": {
      "link": {}
    },
    "typography": {
      "fontSize": "var(--wp--preset--font-size--medium)",
      "fontFamily": "var(--wp--preset--font-family--helvetica-neue)",
      "lineHeight": "1.7"
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Footer"
    }
  ]
}
